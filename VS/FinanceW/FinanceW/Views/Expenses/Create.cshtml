@model FinanceW.Models.Expense

@{
    ViewData["Title"] = "Crear gasto";
}

<h2>Crear gasto</h2>

@*<h4>Expense</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpenseTypeId" class="control-label"></label>
                <select asp-for="ExpenseTypeId" asp-items="Html.GetEnumSelectList<FinanceW.Models.Enum.ExpenseType>()" class="form-control"></select>
                <span asp-validation-for="ExpenseTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyId" class="control-label"></label>
                <select asp-for="CurrencyId" class ="form-control" asp-items="ViewBag.CurrencyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CutDay" class="control-label"></label>
                <input asp-for="CutDay" class="form-control" />
                <span asp-validation-for="CutDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayDayLimit" class="control-label"></label>
                <input asp-for="PayDayLimit" value="1" class="form-control" />
                <span asp-validation-for="PayDayLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

