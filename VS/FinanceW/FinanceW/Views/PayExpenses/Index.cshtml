                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusPayExpense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expense.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Alias)
