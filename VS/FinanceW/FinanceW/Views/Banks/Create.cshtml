@model FinanceW.Models.Bank

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Bank</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <select asp-for="Country" class="form-control" 
                        asp-items="Html.GetEnumSelectList<FinanceW.Models.Enum.Country>()"></select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusBank" class="control-label"></label>
                <select asp-for="StatusBank" class="form-control" 
                        asp-items="Html.GetEnumSelectList<FinanceW.Models.Enum.StatusBank>()"></select>
                <span asp-validation-for="StatusBank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
